<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Final.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Final"
    Shell.FlyoutBehavior="Flyout"
    Title="Final">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="InventoryPage" />

    <ShellContent
        Title="Detail"
        ContentTemplate="{DataTemplate local:DetailPage}"
        Route="DetailPage" />

    <ShellContent
        Title="Directions"
        ContentTemplate="{DataTemplate local:DirectionsPage}"
        Route="DirectionsPage" />

</Shell>
